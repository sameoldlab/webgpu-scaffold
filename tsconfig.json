{
	"compilerOptions": {
		"strict": true,
		"target": "ESNext",
		"useDefineForClassFields": true,
		"module": "ESNext",
		"moduleResolution": "Bundler",
		"resolveJsonModule": true,

		"skipLibCheck": true,
		"allowJs": false,
		"noImplicitAny": true,  
		"outDir": "dist",
		"declaration": true,
		"isolatedModules": true
	},
	"include": ["src"],
}
